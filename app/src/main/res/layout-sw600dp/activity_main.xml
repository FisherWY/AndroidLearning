              android:id="@+id/news_tittle_fragment"
              android:name="com.fisher.helloandroid.NewsTittleFragment"/>

    <FrameLayout android:layout_width="0dp" android:layout_height="match_parent"
                 android:layout_weight="3"
                 android:id="@+id/news_content">

        <fragment android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/news_content_fragment"
                  android:name="com.fisher.helloandroid.NewsContentFragment"/>

